  <style>
    /* Card hover effects */
    .track-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .group:hover .track-card {
      box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    }

    /* Staggered hover effect for grid items */
    @media (min-width: 1024px) {
      .grid > div:nth-child(3n+1):hover,
      .grid > div:nth-child(3n+3):hover {
        transform: translateY(-8px) rotate(-0.5deg);
      }

      .grid > div:nth-child(3n+2):hover {
        transform: translateY(-8px) rotate(0.5deg);
      }
    }

    /* Add subtle text shadow on hover for better readability while keeping text white */
    .group-hover\:text-shadow-sm {
      text-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
    }

    /* Add a subtle line indicator at bottom of cards that animates on hover */
    .track-card::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: var(--card-color);
      transform: scaleX(0);
      transform-origin: left;
      transition: transform 0.5s ease;
      z-index: 25;
    }

    .group:hover .track-card::after {
      transform: scaleX(1);
    }

    /* Animated tags */
    span.inline-flex {
      transition: all 0.3s ease;
    }

    span.inline-flex:hover {
      transform: translateY(-2px);
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
  </style>
</>
