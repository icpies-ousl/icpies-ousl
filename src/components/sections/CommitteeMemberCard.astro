---
export interface Member {
  name: string;
  role?: string;
  title?: string;
  affiliation?: string;
  image: string;
  category: string;
  country?: string;
  linkedin?: string;
  email?: string;
}

const { name, role, title, affiliation, image, linkedin, email } = Astro.props;

// Default image if none provided
const profileImage = image || "./committee/default-avatar.jpg";
---

<div class="group relative bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transform transition duration-300 hover:-translate-y-2 h-full flex flex-col">
  <!-- Decorative top accent -->
  <div class="absolute top-0 left-0 right-0 h-1.5 bg-gradient-to-r from-emerald-400 to-teal-500"></div>

  <!-- Image with overlay effect - FIXED HEIGHT -->
  <div class="relative h-64 w-full flex-shrink-0">
    <div class="w-full h-full overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200">
      <img
        src={profileImage}
        alt={`Photo of ${name}`}
        class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105 filter group-hover:brightness-105"
        loading="lazy"
        onerror="this.onerror=null; this.src='./committee/default-avatar.jpg';"
      />
      <!-- Subtle overlay gradient -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    </div>
  </div>

<div class="p-5 flex flex-col flex-grow bg-white" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.5), rgba(249, 250, 251, 0.8)), url('data:image/png;base64,');">
    <h3 class="text-lg font-bold text-gray-800 mb-1 relative inline-block">
      {name}
      <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-emerald-500 transition-all duration-300 group-hover:w-full"></span>
    </h3>

    {title && (
      <p class="text-sm font-medium text-emerald-700 mb-1">
        {title}
      </p>
    )}

    {affiliation && (
      <div class="mt-2 flex items-start text-sm text-gray-600 group-hover:text-gray-800 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-emerald-500 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
        <span class="line-clamp-3">{affiliation}</span>
      </div>
    )}

    <div class="flex-grow"></div>
</div>
</div>
