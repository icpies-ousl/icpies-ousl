---
import { Image } from "astro:assets";

interface Props {
    title: string;
    aboutTitle?: string;
    aboutDescription?: string;
    aboutTheme?: string;
    aboutLogo?: string;
    services: {
        title: string;
        description: string;
        icon: string;
    }[];
    logos?: {
        ousl?: string; // Path to OUSL logo
        cessd?: string; // Path to CESSD logo
    };
}

const { title, aboutTitle, aboutDescription, aboutTheme, aboutLogo, services, logos = {} } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/pages/**/*.{webp,jpeg,jpg,png,gif,svg}",
);
---

<div class="pt-36" id="services">
    {aboutTitle && (
        <div class="mb-16 p-8 bg-[#F7F7F7] rounded-xl border-l-4 border-[#1A7A64] shadow-md">
            <!-- Enhanced Logo Section -->
            {aboutLogo && (
                <div class="flex justify-center mb-8">
                    <div class="conference-logo-container relative">
                        <div class="absolute inset-0 rounded-full bg-gradient-to-br from-[#4ECDC4]/30 via-[#1A7A64]/20 to-[#0D3B66]/30 blur-md"></div>
                        <div class="absolute inset-0 animate-pulse-slow opacity-60 rounded-full bg-[#1A7A64]/10"></div>
                        <img
                            src={aboutLogo}
                            alt="ICPIES 2025 Logo"
                            class="relative z-10 w-40 h-40 object-contain"
                            width="160"
                            height="160"
                        />
                    </div>
                </div>
            )}

            <div class="text-center max-w-4xl mx-auto mb-6">
                <h2 class="text-3xl font-bold text-[#2C3E50] mb-3">
                    {aboutTitle}
                </h2>
                <div class="w-24 h-1 bg-[#1A7A64] rounded-full mx-auto mb-6 opacity-60"></div>
                <p class="text-lg text-[#2C3E50]/90 leading-relaxed">
                    {aboutDescription}
                </p>
            </div>

            {aboutTheme && (
                <div class="mt-10">
                    <h3 class="text-xl font-semibold text-[#1A7A64] mb-3 flex items-center justify-center">
                        <span class="inline-block w-6 h-6 mr-2 rounded-full bg-[#1A7A64]/20 flex items-center justify-center">
                            <span class="w-3 h-3 bg-[#1A7A64] rounded-full"></span>
                        </span>
                        Conference Theme
                    </h3>
                    <div class="relative overflow-hidden rounded-lg py-5 px-6 bg-gradient-to-r from-[#4ECDC4]/10 via-[#1A7A64]/10 to-[#0D3B66]/10 border border-[#4ECDC4]/20 shadow-sm">
                        <div class="absolute top-0 left-0 w-2 h-full bg-gradient-to-b from-[#1A7A64] to-[#0D3B66]"></div>
                        <div class="absolute bottom-[-30px] right-[-20px] w-40 h-40 opacity-10 rounded-full bg-[#FF9F1C]"></div>
                        <p class="text-lg md:text-xl font-bold relative z-10 text-transparent bg-clip-text bg-gradient-to-r from-[#1A7A64] to-[#0D3B66]">
                            {aboutTheme}
                        </p>
                    </div>
                </div>
            )}
        </div>
    )}

    <!-- Rest of the component remains the same -->
    <div class="mb-12">
        <h2
            class="text-[2.13rem] leading-9 font-semibold mb-6 text-center mx-auto"
            set:html={title}
        />

        <!-- Organizers Logos Section -->
        <div class="flex flex-col md:flex-row justify-center items-center gap-8 mt-8 px-4">
            <div class="organizer-card">
                <div class="relative flex flex-col items-center p-6 bg-white rounded-xl shadow-md border border-[#FF9F1C]/20 transform transition-all duration-300 hover:scale-105 hover:shadow-lg group">
                    <div class="absolute inset-0 bg-gradient-to-br from-[#FF9F1C]/5 to-[#FF9F1C]/20 rounded-xl opacity-50"></div>
                    {logos.ousl && (
                        <div class="w-32 h-32 flex items-center justify-center mb-4 relative z-10">
                            <img
                                src={logos.ousl}
                                alt="OUSL Logo"
                                width="128"
                                height="128"
                                class="object-contain"
                            />
                        </div>
                    )}
                    <h3 class="text-xl font-bold text-[#FF9F1C] text-center relative z-10 group-hover:text-[#FF8C00] transition-colors duration-300">
                        The Open University of Sri Lanka
                    </h3>
                    <div class="w-16 h-1 bg-[#FF9F1C]/30 rounded-full mt-2 mb-3 group-hover:bg-[#FF9F1C]/50 transition-colors duration-300"></div>
                </div>
            </div>

            <div class="flex items-center text-2xl font-bold text-[#2C3E50]/60 mx-4">&</div>

            <div class="organizer-card">
                <div class="relative flex flex-col items-center p-6 bg-white rounded-xl shadow-md border border-[#1A7A64]/20 transform transition-all duration-300 hover:scale-105 hover:shadow-lg group">
                    <div class="absolute inset-0 bg-gradient-to-br from-[#1A7A64]/5 to-[#1A7A64]/20 rounded-xl opacity-50"></div>
                    {logos.cessd && (
                        <div class="w-32 h-32 flex items-center justify-center mb-4 relative z-10">
                            <img
                                src={logos.cessd}
                                alt="CESSD Logo"
                                width="128"
                                height="128"
                                class="object-contain"
                            />
                        </div>
                    )}
                    <h3 class="text-xl font-bold text-[#1A7A64] text-center relative z-10 group-hover:text-[#156A54] transition-colors duration-300">
                        CESSD
                    </h3>
                    <div class="w-16 h-1 bg-[#1A7A64]/30 rounded-full mt-2 mb-3 group-hover:bg-[#1A7A64]/50 transition-colors duration-300"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Services section remains the same -->
</div>

<style>
    .group:hover h3 {
        color: #0D3B66;
    }

    .organizer-card {
        width: 250px;
        transform: translateY(0);
        transition: transform 0.3s ease;
    }

    @media (max-width: 768px) {
        .organizer-card {
            width: 220px;
        }
    }

    @keyframes float {
        0% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-5px);
        }
        100% {
            transform: translateY(0px);
        }
    }

    .organizer-card:hover {
        animation: float 3s ease-in-out infinite;
    }

    /* New styles for the enhanced logo */
    .conference-logo-container {
        width: 160px;
        height: 160px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        padding: 10px;
        position: relative;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .conference-logo-container:hover {
        transform: scale(1.05);
    }

    @keyframes pulse-slow {
        0% {
            transform: scale(0.95);
            opacity: 0.5;
        }
        50% {
            transform: scale(1.05);
            opacity: 0.7;
        }
        100% {
            transform: scale(0.95);
            opacity: 0.5;
        }
    }

    .animate-pulse-slow {
        animation: pulse-slow 4s infinite;
    }
</style>
