---
import { Image } from "astro:assets";

interface Props {
    title: string;
    aboutTitle?: string;
    aboutDescription?: string;
    aboutTheme?: string;
    services: {
        title: string;
        description: string;
        icon: string;
    }[];
    logos?: {
        ousl?: string; // Path to OUSL logo
        cessd?: string; // Path to CESSD logo
    };
}

const { title, aboutTitle, aboutDescription, aboutTheme, services, logos = {} } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/pages/**/*.{webp,jpeg,jpg,png,gif,svg}",
);
---

<div class="pt-36" id="services">
    {aboutTitle && (
        <div class="mb-16 p-8 bg-[#F7F7F7] rounded-xl border-l-4 border-[#1A7A64] shadow-md">
            <h2 class="text-3xl font-bold text-[#2C3E50] mb-4">
                {aboutTitle}
            </h2>
            <p class="text-lg text-[#2C3E50]/90 mb-6 leading-relaxed">
                {aboutDescription}
            </p>
            {aboutTheme && (
                <div class="mt-8">
                    <h3 class="text-xl font-semibold text-[#1A7A64] mb-3 flex items-center">
                        <span class="inline-block w-6 h-6 mr-2 rounded-full bg-[#1A7A64]/20 flex items-center justify-center">
                            <span class="w-3 h-3 bg-[#1A7A64] rounded-full"></span>
                        </span>
                        Conference Theme
                    </h3>
                    <div class="relative overflow-hidden rounded-lg py-5 px-6 bg-gradient-to-r from-[#4ECDC4]/10 via-[#1A7A64]/10 to-[#0D3B66]/10 border border-[#4ECDC4]/20 shadow-sm">
                        <div class="absolute top-0 left-0 w-2 h-full bg-gradient-to-b from-[#1A7A64] to-[#0D3B66]"></div>
                        <div class="absolute bottom-[-30px] right-[-20px] w-40 h-40 opacity-10 rounded-full bg-[#FF9F1C]"></div>
                        <p class="text-lg md:text-xl font-bold relative z-10 text-transparent bg-clip-text bg-gradient-to-r from-[#1A7A64] to-[#0D3B66]">
                            {aboutTheme}
                        </p>
                    </div>
                </div>
            )}
        </div>
    )}

       <div class="mb-12">
        <h2
            class="text-[2.13rem] leading-9 font-semibold mb-6 text-center mx-auto"
            set:html={title}
        />

        <!-- Organizers Logos Section -->
        <div class="flex flex-col md:flex-row justify-center items-center gap-8 mt-8 px-4">
            <div class="organizer-card">
                <div class="relative flex flex-col items-center p-6 bg-white rounded-xl shadow-md border border-[#FF9F1C]/20 transform transition-all duration-300 hover:scale-105 hover:shadow-lg group">
                    <div class="absolute inset-0 bg-gradient-to-br from-[#FF9F1C]/5 to-[#FF9F1C]/20 rounded-xl opacity-50"></div>
                    {logos.ousl && (
						<div class="w-32 h-32 flex items-center justify-center mb-4 relative z-10">
                            <Image
                        src={logos.ousl}
                        alt="OUSL Logo"
                        width={128}
                        height={128}
                        class="object-contain"
                    />
                        </div>
                    )}

                    <div class="w-16 h-1 bg-[#FF9F1C]/30 rounded-full mt-2 mb-3 group-hover:bg-[#FF9F1C]/50 transition-colors duration-300"></div>
                </div>
            </div>

            <div class="flex items-center text-2xl font-bold text-[#2C3E50]/60 mx-4">&</div>

            <div class="organizer-card">
                <div class="relative flex flex-col items-center p-6 bg-white rounded-xl shadow-md border border-[#1A7A64]/20 transform transition-all duration-300 hover:scale-105 hover:shadow-lg group">
                    <div class="absolute inset-0 bg-gradient-to-br from-[#1A7A64]/5 to-[#1A7A64]/20 rounded-xl opacity-50"></div>
                    {logos.cessd && (
                        <div class="w-32 h-32 flex items-center justify-center mb-4 relative z-10">
 <Image
                        src={logos.cessd}
                        alt="OUSL Logo"
                        width={128}
                        height={128}
                        class="object-contain"
                    />
                        </div>
                    )}
                    <div class="w-16 h-1 bg-[#1A7A64]/30 rounded-full mt-2 mb-3 group-hover:bg-[#1A7A64]/50 transition-colors duration-300"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-20">
        <div
            class="auto-cols-fr grid-cols-1 md:grid-cols-3 grid-rows-[auto] grid gap-10"
        >
            {
                services.map(({ title, description, icon }) => (
                    <div class="items-stretch flex-col flex h-full max-w-[90%] m-auto col-span-1 row-span-1 group hover:transform hover:translate-y-[-5px] transition-transform duration-300">
                        <div class="relative">
                            <div class="absolute -inset-1 bg-[#4ECDC4]/20 rounded-full blur-sm"></div>
                            <Image
                                src={images[icon]()}
                                alt={`Service ${title}`}
                                class="relative align-middle inline-block w-16 h-16 max-w-full p-2 bg-white rounded-full shadow-md"
                            />
                        </div>
                        <div class="mt-10 text-[1.38rem] leading-7 font-semibold">
                            <h3 class="mb-3 text-[#1A7A64]">{title}</h3>
                        </div>
                        <div class="mt-3.5 text-lg">
                            <p class="mb-3 text-[#2C3E50]/80">{description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>

<style>
    .group:hover h3 {
        color: #0D3B66;
    }

    .organizer-card {
        width: 250px;
        transform: translateY(0);
        transition: transform 0.3s ease;
    }

    @media (max-width: 768px) {
        .organizer-card {
            width: 220px;
        }
    }

    @keyframes float {
        0% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-5px);
        }
        100% {
            transform: translateY(0px);
        }
    }

    .organizer-card:hover {
        animation: float 3s ease-in-out infinite;
    }
</style>
