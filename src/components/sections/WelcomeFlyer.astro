---
import { Image } from "astro:assets";

import FlyerImage from "/src/assets/pages/homepage/welcomeflyer.jpg";

interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title = "Join Us at ICPIES 2025",
  subtitle = "Be part of the global conversation on plastic innovation and environmental sustainability",
  ctaText = "Register Now",
  ctaLink = "/contact"
} = Astro.props;
---

<div class="welcome-flyer-section py-24 rounded-lg relative overflow-hidden">
  <!-- Animated background elements -->
  <div class="animated-bg-element"></div>
  <div class="animated-bg-element delay-2"></div>
  <div class="animated-bg-element delay-4"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-12 reveal-text">
      <h2 class="text-4xl font-bold text-[#2C3E50] mb-4">{title}</h2>
      <div class="w-32 h-1 bg-gradient-to-r from-[#1A7A64] to-[#4ECDC4] rounded-full mx-auto mb-6"></div>
      <p class="text-xl text-[#2C3E50]/80 max-w-2xl mx-auto">{subtitle}</p>
    </div>

    <div class="flex justify-center">
      <div class="flyer-container reveal-image">
        <div class="flyer-border"></div>
        <div class="flyer-image-wrapper">
          <Image
            src={FlyerImage}
            alt="ICPIES 2025 Conference Flyer"
            class="flyer-image"
            width={1000}
            height={1500}
          />
        </div>
        <div class="flyer-overlay">
          <div class="flyer-overlay-content">
            <h3 class="text-white text-2xl font-bold mb-2">Ready to Participate?</h3>
            <a href={ctaLink} class="inline-flex items-center gap-2 px-6 py-3 bg-white text-[#1A7A64] font-medium rounded-lg transition-all duration-300 hover:bg-opacity-90 transform hover:-translate-y-1">
              {ctaText}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .welcome-flyer-section {
    position: relative;
    /* Remove top positioning that was causing overlap */
    /* top: 20px; - This was likely causing issues */
    margin-bottom: 2rem; /* Add spacing at bottom */
  }

  .animated-bg-element {
    position: absolute;
    border-radius: 50%;
    width: 400px;
    height: 400px;
    filter: blur(80px);
    opacity: 0.6;
    animation: float 15s infinite ease-in-out;
    top: -100px;
    left: -100px;
    /* Ensure these stay contained */
    z-index: 1;
  }

  .animated-bg-element.delay-2 {
    animation-delay: 5s;
    width: 350px;
    height: 350px;
    background: linear-gradient(135deg, rgba(13, 59, 102, 0.1) 0%, rgba(26, 122, 100, 0.1) 100%);
    top: auto;
    left: auto;
    right: -50px;
    bottom: 100px;
  }

  .animated-bg-element.delay-4 {
    animation-delay: 10s;
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, rgba(255, 159, 28, 0.1) 0%, rgba(78, 205, 196, 0.1) 100%);
    top: 200px;
    right: 30%;
    left: auto;
  }

  @keyframes float {
    0% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, 30px) rotate(5deg); }
    66% { transform: translate(-20px, 20px) rotate(-5deg); }
    100% { transform: translate(0, 0) rotate(0deg); }
  }

  .flyer-container {
    position: relative;
    width: 90%;
    max-width: 800px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    transform: translateY(50px);
    opacity: 0;
    animation: reveal-up 1s forwards ease-out;
    animation-delay: 0.2s;
    /* Ensure container stays within its parent */
    max-height: 600px;
  }

  .flyer-border {
    position: absolute;
    inset: 0;
    border: 2px solid transparent;
    border-radius: 12px;
    background: linear-gradient(135deg, #1A7A64 0%, #4ECDC4 50%, #0D3B66 100%) border-box;
    -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: destination-out;
    mask-composite: exclude;
    animation: border-pulse 4s infinite;
    z-index: 3;
    pointer-events: none;
  }

  @keyframes border-pulse {
    0% { opacity: 0.6; }
    50% { opacity: 1; }
    100% { opacity: 0.6; }
  }

  .flyer-image-wrapper {
    position: relative;
    padding-top: 56.25%; /* 16:9 Aspect Ratio */
    overflow: hidden;
    border-radius: 10px;
  }

  .flyer-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1s ease;
  }

  .flyer-container:hover .flyer-image {
    transform: scale(1.05);
  }

  .flyer-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(26, 122, 100, 0.9), transparent);
    padding: 30px;
    display: flex;
    align-items: flex-end;
    height: 40%;
    opacity: 0;
    transition: opacity 0.5s ease, height 0.5s ease;
  }

  .flyer-container:hover .flyer-overlay {
    opacity: 1;
    height: 50%;
  }

  .flyer-overlay-content {
    width: 100%;
    transform: translateY(20px);
    transition: transform 0.5s ease;
  }

  .flyer-container:hover .flyer-overlay-content {
    transform: translateY(0);
  }

  @keyframes reveal-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .reveal-text {
    opacity: 0;
    transform: translateY(30px);
    animation: reveal-up 1s forwards ease-out;
  }

  .reveal-image {
    opacity: 0;
    transform: translateY(50px);
    animation: reveal-up 1s forwards ease-out;
    animation-delay: 0.4s;
  }

  @media (max-width: 768px) {
    .flyer-overlay {
      height: 50%;
      opacity: 1;
      padding: 20px;
    }

    .flyer-overlay-content {
      transform: translateY(0);
    }

    .animated-bg-element {
      width: 200px;
      height: 200px;
    }
  }
</style>

<script>
  // Intersection Observer to trigger animations when elements come into view
  document.addEventListener('DOMContentLoaded', function() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          if (entry.target.classList.contains('flyer-container')) {
            entry.target.style.animationPlayState = 'running';
          } else if (entry.target.classList.contains('reveal-text')) {
            entry.target.style.animationPlayState = 'running';
          }
        }
      });
    }, {
      threshold: 0.1
    });

    document.querySelectorAll('.flyer-container, .reveal-text').forEach(el => {
      el.style.animationPlayState = 'paused';
      observer.observe(el);
    });

    // Modify parallax effect to prevent going too far
    const flyerSection = document.querySelector('.welcome-flyer-section');
    if (flyerSection) {
      window.addEventListener('scroll', () => {
        const scrollPosition = window.scrollY;
        const flyerImage = document.querySelector('.flyer-image');
        // Limit the offset range to prevent excessive movement
        const sectionTop = flyerSection.getBoundingClientRect().top + window.scrollY;
        const sectionBottom = sectionTop + flyerSection.offsetHeight;

        // Only apply parallax when section is visible
        if (scrollPosition > sectionTop - window.innerHeight &&
            scrollPosition < sectionBottom) {
          const offset = (scrollPosition - sectionTop) * 0.05; // Reduced multiplier
          if (flyerImage) {
            flyerImage.style.transform = `translateY(${offset}px)`;
          }
        }
      });
    }
  });
</script>
